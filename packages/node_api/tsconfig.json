{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "preserve",
    "importHelpers": false,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "types": [
      "im-library",
      "im-library/config",
      "im-library/constants",
      "im-library/enums",
      "im-library/helpers",
      "im-library/interfaces",
      "im-library/models",
      "im-library/vocabulary"
    ]
  },
  "include": ["./src"]
}
