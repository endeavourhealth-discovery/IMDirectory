{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noLib": false,
    "noImplicitAny": false,
    "declaration": true,
    "lib": ["esnext"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.js"]
}
