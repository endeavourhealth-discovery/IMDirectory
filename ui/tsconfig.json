{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["vite/client", "google-palette", "vitest/globals"],
    "paths": {
      "@/*": ["src/*"],
      "@im-library/*": ["../im_library/src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "outDir": "./dist"
  },
  "references": [{ "path": "../im_library/tsconfig.json", "prepend": true }],
  "include": ["./src/**/*.vue", "./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["node_modules"]
}
