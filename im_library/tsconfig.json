{
  "compilerOptions": {
    "target": "esnext",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "composite": true,
    "outDir": "./dist/types",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "references": [],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/typings/*.d.ts",
    "./tests/**/*.spec.js",
    "./tests/**/*.spec.ts",
    "./tests/**/*.testData.ts",
    "./tests/**/*.testData.js"
  ],
  "exclude": ["node_modules", "./dist/types/**/*"]
}
