{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "rootDirs": [".", "../im_library"],
    "baseUrl": ".",
    "outDir": "./dist/types",
    "paths": {
      "@/*": ["./src/*"],
      "@im-library/*": ["../im_library/src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.js", "./tests/**/*.spec.js", "./tests/**/*.spec.ts"],
  "exclude": ["node_modules", "./dist/types/**/*"]
}
